<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_top_login_margin"
    android:layout_height="wrap_content"
    android:background="@drawable/eventcard"
    app:cardCornerRadius="5dp"
    tools:context="com.madhapar.View.CardEvent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/activity_top_login_margin"
                android:layout_marginLeft="@dimen/activity_login_margin"
                android:id="@+id/tvEventName"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_top_login_margin"
                android:layout_gravity="right"
                android:id="@+id/btnShare"
                android:background="@drawable/buttonshare"
                android:text="@string/share"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/activity_login_margin"
                android:textSize="@dimen/activity_top_login_margin" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_login_margin"
            android:id="@+id/tvAddress"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/activity_top_login_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_siz_large"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/activity_top_login_margin"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_login_margin"
                android:id="@+id/tvGoing"
                android:drawableLeft="@drawable/icon_event_going"
                android:text="@string/going"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/magin_large"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:id="@+id/tvGoingCount"
                    android:text="12"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/textviewcard"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_login_margin"
                    android:id="@+id/tvInterest"
                    android:drawableLeft="@drawable/icon_event_interest"
                    android:text="@string/interest"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/magin_large"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text="12"
                    android:id="@+id/tvInterestCount"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/textviewcard"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNotInterest"
                    android:layout_marginLeft="@dimen/activity_login_margin"
                    android:drawableLeft="@drawable/icon_event_not_going"
                    android:text="@string/cantgo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/magin_large"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:id="@+id/tvNotInterestCount"
                    android:text="12"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/textviewcard"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
