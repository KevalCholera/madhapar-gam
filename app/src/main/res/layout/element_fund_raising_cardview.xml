<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/searchBarPadding"
    android:layout_marginRight="@dimen/searchBarPadding"
    android:layout_marginTop="@dimen/margin_medium"
    android:background="@drawable/eventcard"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/cardElevation">

    <LinearLayout
        android:id="@+id/llFundRaisingProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFundRaisingProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFundRaisingProjectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/cardElevation"
            android:layout_marginTop="@dimen/cardElevation"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text16" />

        <TextView
            android:id="@+id/tvFundRaisingProjectAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardElevation"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFundRaisingProjectGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/tvFundRaisingProjectRaised"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text14" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>