<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.madhapar.View.FeedbackActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_large"
        android:id="@+id/etFeedbackSubject"
        android:layout_marginTop="@dimen/top_margin_medium"
        android:paddingLeft="@dimen/paddingSmall"
        android:layout_marginLeft="@dimen/top_margin_large"
        android:layout_marginRight="@dimen/top_margin_large"
        android:background="@drawable/feedback"
        android:textColor="@color/colorBlack"
        android:hint="@string/feedbackSubject"
        android:singleLine="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_width"
        android:id="@+id/etFeedbackFeedback"
        android:textColor="@color/colorBlack"
        android:gravity="top"
        android:layout_marginTop="@dimen/top_margin_medium"
        android:paddingLeft="@dimen/paddingSmall"
        android:layout_marginLeft="@dimen/top_margin_large"
        android:layout_marginRight="@dimen/top_margin_large"
        android:inputType="textMultiLine"
        android:paddingTop="@dimen/paddingSmall"
        android:background="@drawable/feedback"
        android:hint="@string/feedback"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="@dimen/top_margin_large"
        android:id="@+id/btnFeedbackSend"
        android:layout_marginLeft="@dimen/top_margin_large"
        android:layout_marginRight="@dimen/top_margin_large"
        android:layout_marginBottom="@dimen/activity_login_margin"
        android:background="@color/colorPrimary"
        android:text="@string/feedbackSent"
        android:textColor="@color/colorWhite"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
