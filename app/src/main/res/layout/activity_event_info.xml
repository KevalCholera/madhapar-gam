<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvToolbarTitleGoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eventInfo"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ivProfileSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_width"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fund_raising" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEventInfoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/activity_vertical_margin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEventInfoShare"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/cardElevation"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_weight="1"
            android:background="@drawable/buttonshare"
            android:text="@string/share" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />

    <TextView
        android:id="@+id/tvEventInfoDtaeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/cardElevation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />

    <TextView
        android:id="@+id/tvEventInfoAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/cardElevation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardElevation"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/cardElevation"
            android:text="@string/organized"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventInfoOrganized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/cardElevation"
            android:textAlignment="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />

    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardElevation"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/cardElevation"
        android:inputType="textMultiLine"
        android:textColor="@color/cardview_dark_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_siz_large"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/activity_top_login_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_vertical_margin"
                android:layout_height="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/cardview_default_radius"
                android:background="@mipmap/ic_event_going"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvGoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@string/going"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tvEventInfoGoingCount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_large"
                android:background="@drawable/textviewcard"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_vertical_margin"
                android:layout_height="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/cardview_default_radius"
                android:gravity="center"
                android:src="@mipmap/ic_event_interest" />

            <TextView
                android:id="@+id/tvInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@string/interest"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tvEventInfoInterestCount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_large"
                android:background="@drawable/textviewcard"
                android:gravity="center"
                android:padding="@dimen/smallPadding"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_vertical_margin"
                android:layout_height="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/cardview_default_radius"
                android:background="@mipmap/ic_event_not_going"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvNotInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@string/cantgo"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tvEventInfoNotInterestCount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/magin_large"
                android:background="@drawable/textviewcard"
                android:gravity="center"
                android:padding="@dimen/smallPadding"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_medium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
