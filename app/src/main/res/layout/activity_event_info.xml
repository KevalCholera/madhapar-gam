<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarComment"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tvToolbarTitleGoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eventInfo"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/ivProfileSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_width"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_food" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvEventInfoTitle"
            android:layout_weight="5"
            android:textStyle="bold"
            android:textSize="@dimen/activity_vertical_margin"
            android:textColor="@color/colorPrimary"
            android:text="bhbchdbc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:id="@+id/btnEventInfoShare"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@drawable/buttonshare"
            android:layout_marginBottom="@dimen/cardElevation"
            android:text="@string/share"
            android:layout_gravity="end"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="njnjn"
        android:id="@+id/tvEventInfoDtaeTime"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/cardElevation" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="njnjn"
        android:id="@+id/tvEventInfoAddress"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/cardElevation" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/colorGrey" />
