<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mainalert"
    android:layout_height="match_parent"
    android:background="@drawable/alertdialogdesign"
    android:orientation="vertical"
    tools:context="com.madhapar.View.ForgetPassword">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_rightleft_login"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/activity_top_login_margin"
        android:text="@string/enterOTP"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_rightleft_login"
        android:layout_marginLeft="@dimen/activity_rightleft_login"
        android:layout_marginTop="@dimen/activity_rightleft_login"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_medium"
            android:maxLength="1"
            android:layout_height="wrap_content"
            android:id="@+id/etCode1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_medium"
            android:inputType="number"
            android:maxLength="1"
            android:layout_height="wrap_content"
            android:id="@+id/etCode2"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="@dimen/margin_medium"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/etCode3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="@dimen/margin_medium"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/etCode4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_login_margin"
        android:layout_marginTop="@dimen/activity_rightleft_login"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvResendCode"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="left"
            android:textSize="@dimen/activity_top_login_margin"
            android:text="@string/resendOTP"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCancel"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_medium"
            android:gravity="right"
            android:textSize="@dimen/activity_top_login_margin"
            android:text="@string/cancel"/>

    </LinearLayout>
</LinearLayout>
