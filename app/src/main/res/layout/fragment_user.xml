<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/paddingButtom"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imageheight"
                    android:adjustViewBounds="true"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cover_placeholder" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/imageheight"
                    android:gravity="center"
                    android:padding="@dimen/paddingSmall">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePhotoSmall"
                        android:layout_width="@dimen/circuleruser"
                        android:layout_height="@dimen/circuleruser"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:src="@drawable/icon_placeholde" />

                    <ImageView
                        android:id="@+id/ivEditIcon"
                        android:layout_width="@dimen/activity_top_login_margin"
                        android:layout_height="@dimen/activity_top_login_margin"
                        android:layout_alignRight="@+id/ivProfilePhotoSmall"
                        android:layout_alignTop="@+id/ivProfilePhotoSmall"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:src="@drawable/icon_edit_white" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultpadding"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textColor="@color/colorGreyProfile"
                        android:text="@string/profileName" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfileEditProfileName"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorGreyProfile"
                        android:gravity="right"
                        android:text="@string/lastNameEditProfile"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfileMobileEditLastName"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorGreyProfile"
                        android:gravity="right"
                        android:text="@string/profileNumver"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfileMobileEditProfileNumber"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorGreyProfile"
                        android:gravity="right"
                        android:text="@string/profileLocation"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditProfileLocation"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textColor="@color/colorGreyProfile"
                        android:text="@string/profileDOB"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditProfileDOB"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textColor="@color/colorGreyProfile"
                        android:text="@string/profileMemberShipNo"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditMembershipNo"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textColor="@color/colorGreyProfile"
                        android:text="@string/profileBloodGroud"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditProfileBloodGroup"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorGreyProfile"
                        android:gravity="right"
                        android:text="@string/profileEmail"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditProfileEmail"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultpadding"
                    android:paddingBottom="@dimen/CommentOverlayImage"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/colorGreyProfile"
                        android:gravity="right"
                        android:text="@string/profileFacebook"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etEditProfileFacebbokId"
                        android:layout_marginLeft="@dimen/defaultpadding"
                        android:layout_weight="1.3"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/search"
                        android:paddingLeft="@dimen/paddingSmall"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/marginRight"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>