<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivImageGrid"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:paddingLeft="@dimen/paddingSmall"
        android:paddingRight="@dimen/paddingSmall"
        android:paddingTop="@dimen/paddingSmall"
        android:layout_height="@dimen/EventPhotoHeight">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/CommentOverlayImage"
        android:layout_alignLeft="@id/ivImageGrid"
        android:layout_alignRight="@id/ivImageGrid"
        android:layout_alignBottom="@id/ivImageGrid"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:textColor="@color/cardview_light_background"
        android:gravity="center"
        android:background="@color/colorTransparentBlack"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:text="Nature Album"/>
</RelativeLayout>

    <TextView
        android:id="@+id/tvPhotoDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/CommentOverlayImage"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:paddingLeft="@dimen/paddingSmall"
        android:paddingRight="@dimen/paddingSmall"
        android:paddingBottom="@dimen/paddingSmall"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:gravity="center"
        android:text="13 july 2016 - 16 july 2016"
        android:textSize="9sp" >
    </TextView>

</LinearLayout>