<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAlbumMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin20"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivImageGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin30"
                android:background="@mipmap/img_event_photo_place_holder"
                android:scaleType="fitXY"
                android:src="@drawable/gallary_album_corner"></ImageView>

            <TextView
                android:id="@+id/tvAlbumName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/CommentOverlayImage"
                android:layout_above="@+id/tvAlbumDate"
                android:background="@color/colorTransparentBlack"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text12"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tvAlbumDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/CommentOverlayImage"
                android:layout_alignParentBottom="true"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="12sp"></TextView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>