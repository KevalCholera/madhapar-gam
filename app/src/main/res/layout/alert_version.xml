<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:background="@drawable/alert_dialog_white_border"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVersionDialgTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Update Available"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVersionDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:text="A new version of MadhaparGamApp is available.please updaete to version 1.1 now. "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text16"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/homeViewWidth"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/colorTransparentGray" />


    <LinearLayout
        android:id="@+id/llAlertYesNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvVersionDialgCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:text="@string/updateNextTimeButtonMSG"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text20"
            android:textStyle="normal" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentGray" />

        <TextView
            android:id="@+id/tvVersionDialogUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:text="@string/updateNowButtonMSG"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text20"
            android:textStyle="normal" />

    </LinearLayout>


</LinearLayout>
